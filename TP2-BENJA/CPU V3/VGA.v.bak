module VGA_driver (
	input clk_25MHz,
	output reg[15:0] H_Count_Value
	output reg[15:0] V_count_Value
);

	reg enable_Vert;

	initial begin
	V_count_Value = 0;
	end

	always@ (posedge clk_25MHz) begin
		if (enable_V_Counter == 1'b1) begin
			if (V_count_Value < 524)
			//keep counting
				V_count_Value <= V_count_Value + 1;
			else V_count_Value <= 0; //reset counter
		end
	end
endmodule 




module horizontal_counter (
	input clk_25MHz,
	output reg enable_V_Counter,
	
);

	initial begin
		enable_V_Counter = 0;
		H_Count_Value = 0;
	end
	
	always@ (posedge clk_25MHz) begin
		if (H_Count_Value < 799) begin
			H_Count_Value <= H_Count_Value + 1;
			enable_V_Counter <= 0; //set low Vertical counter
		end
		else begin //triggered once
			H_Count_Value <= 0; //reset counter
			enable_V_Counter <= 1; //enable as top was reached
		end
	end
	
endmodule 